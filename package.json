{
  "name": "storyboard-by-daviddung",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p electron/tsconfig.json --watch --preserveWatchOutput\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron -r tsx electron/main.ts\"",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:electron && vite build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "preview": "vite preview"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.40",
    "@types/react-dom": "^18.2.16",
    "@types/node": "^20.10.6",
    "@types/turndown": "^5.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.daviddung.storyboard",
    "productName": "STORYBOARD BY DAVIDDUNG",
    "files": [
      "dist/**/*",
      "dist/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
